{"ast":null,"code":"import axios from 'axios';\nexport default {\n  data() {\n    return {\n      events: [],\n      searchQuery: '',\n      startDate: '',\n      endDate: ''\n    };\n  },\n  created() {\n    this.fetchEvents();\n  },\n  methods: {\n    fetchEvents() {\n      const params = {\n        name: this.searchQuery,\n        startDate: this.startDate,\n        endDate: this.endDate\n      };\n      axios.get('http://localhost:3000/api/events', {\n        params,\n        headers: {\n          Authorization: `Bearer ${localStorage.getItem('token')}`\n        }\n      }).then(response => {\n        this.events = response.data;\n      }).catch(error => {\n        console.error('Error fetching events:', error);\n      });\n    },\n    clearFilters() {\n      this.searchQuery = '';\n      this.startDate = '';\n      this.endDate = '';\n      this.fetchEvents();\n    },\n    formatDate(dateString) {\n      const date = new Date(dateString);\n      return date.toISOString().split('T')[0];\n    },\n    scrollLeft() {\n      const container = this.$refs.eventList;\n      container.scrollBy({\n        left: -300,\n        // Adjust the scroll amount as needed\n        behavior: 'smooth'\n      });\n    },\n    scrollRight() {\n      const container = this.$refs.eventList;\n      container.scrollBy({\n        left: 300,\n        // Adjust the scroll amount as needed\n        behavior: 'smooth'\n      });\n    }\n  }\n};","map":{"version":3,"names":["axios","data","events","searchQuery","startDate","endDate","created","fetchEvents","methods","params","name","get","headers","Authorization","localStorage","getItem","then","response","catch","error","console","clearFilters","formatDate","dateString","date","Date","toISOString","split","scrollLeft","container","$refs","eventList","scrollBy","left","behavior","scrollRight"],"sources":["/Users/siddarthbandi/Desktop/SID/project/event-management-platform/event-management-frontend/src/components/EventListPublic.vue"],"sourcesContent":["<template>\n  <div class=\"container mt-4\">\n    <h2 class=\"text-center mb-4\">Event List</h2>\n\n    <!-- Search Bar -->\n    <div class=\"mb-3\">\n      <input \n        v-model=\"searchQuery\" \n        class=\"form-control\" \n        placeholder=\"Search by name\" \n        @input=\"fetchEvents\" \n      />\n    </div>\n\n    <!-- Date Range Filter -->\n    <div class=\"d-flex justify-content-between mb-3\">\n      <div>\n        <label for=\"startDate\">Start Date:</label>\n        <input \n          type=\"date\" \n          v-model=\"startDate\" \n          class=\"form-control\" \n          @change=\"fetchEvents\" \n        />\n      </div>\n      <div>\n        <label for=\"endDate\">End Date:</label>\n        <input \n          type=\"date\" \n          v-model=\"endDate\" \n          class=\"form-control\" \n          @change=\"fetchEvents\" \n        />\n      </div>\n    </div>\n\n    <!-- Navigation Buttons -->\n    <div class=\"d-flex justify-content-end mb-2 position-relative\">\n      <button \n        class=\"nav-button left-button\" \n        @click=\"scrollLeft\" \n        aria-label=\"Scroll Left\"\n      >\n        &#8592;\n      </button>\n      <button \n        class=\"nav-button right-button\" \n        @click=\"scrollRight\" \n        aria-label=\"Scroll Right\"\n      >\n        &#8594;\n      </button>\n    </div>\n\n    <!-- Event List Container -->\n    <div \n      v-if=\"events.length\" \n      class=\"event-list-container\" \n      ref=\"eventList\"\n    >\n      <div \n        v-for=\"event in events\" \n        :key=\"event.id\" \n        class=\"card h-100 event-card\"\n      >\n        <img \n          :src=\"event.image ? `http://localhost:3000${event.image}` : 'http://localhost:3000/uploads/default-image.jpg'\" \n          alt=\"Event Image\" \n          class=\"card-img-top\"\n        />\n        <div class=\"card-body\">\n          <h5 class=\"card-title\">{{ event.name }}</h5>\n          <p class=\"card-text\"><strong>Date:</strong> {{ formatDate(event.date) }}</p>\n          <router-link \n            :to=\"{ name: 'event-details-public', params: { id: event.id } }\" \n            class=\"btn btn-primary mt-3\"\n          >\n            View Details\n          </router-link>\n        </div>\n      </div>\n    </div>\n\n    <!-- No Events Message -->\n    <div v-else class=\"text-center\">\n      <p>No events found.</p>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from 'axios';\n\nexport default {\n  data() {\n    return {\n      events: [],\n      searchQuery: '',\n      startDate: '',\n      endDate: ''\n    };\n  },\n  created() {\n    this.fetchEvents();\n  },\n  methods: {\n    fetchEvents() {\n      const params = {\n        name: this.searchQuery,\n        startDate: this.startDate,\n        endDate: this.endDate\n      };\n      axios.get('http://localhost:3000/api/events', {\n        params,\n        headers: {\n          Authorization: `Bearer ${localStorage.getItem('token')}`\n        }\n      })\n      .then(response => {\n        this.events = response.data;\n      })\n      .catch(error => {\n        console.error('Error fetching events:', error);\n      });\n    },\n    clearFilters() {\n      this.searchQuery = '';\n      this.startDate = '';\n      this.endDate = '';\n      this.fetchEvents();\n    },\n    formatDate(dateString) {\n      const date = new Date(dateString);\n      return date.toISOString().split('T')[0];\n    },\n    scrollLeft() {\n      const container = this.$refs.eventList;\n      container.scrollBy({\n        left: -300, // Adjust the scroll amount as needed\n        behavior: 'smooth'\n      });\n    },\n    scrollRight() {\n      const container = this.$refs.eventList;\n      container.scrollBy({\n        left: 300, // Adjust the scroll amount as needed\n        behavior: 'smooth'\n      });\n    }\n  }\n};\n</script>\n\n<style scoped>\n.event-list-container {\n  display: flex;\n  overflow-x: auto;\n  gap: 16px; /* Adds spacing between cards */\n  padding: 10px;\n  scroll-behavior: smooth; /* Smooth scrolling */\n}\n\n.event-card {\n  flex: 0 0 auto; /* Ensures cards maintain their width and are not shrunk */\n  width: 300px; /* Set a fixed width for the cards */\n}\n\n.event-list-container::-webkit-scrollbar {\n  height: 8px; /* Custom scrollbar height */\n}\n\n.event-list-container::-webkit-scrollbar-thumb {\n  background-color: #888; /* Scrollbar color */\n  border-radius: 4px;\n}\n\n.event-list-container::-webkit-scrollbar-thumb:hover {\n  background-color: #555;\n}\n\n.card {\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);\n  border-radius: 10px;\n}\n\n.card-img-top {\n  height: 200px;\n  object-fit: cover;\n  border-radius: 8px; /* Adjust this as needed */\n  margin: 0 50px 10px 50px; /* Adds horizontal space around the image and bottom margin */\n}\n\n.card-body {\n  padding: 15px;\n}\n\n.card-title {\n  font-size: 1.25rem;\n  margin-bottom: 10px;\n}\n\n.btn {\n  width: 100%;\n}\n\n/* Navigation Buttons */\n.nav-button {\n  position: absolute;\n  top: -10px;\n  width: 40px;\n  height: 40px;\n  border: none;\n  background-color: rgba(0, 0, 0, 0.5);\n  color: white;\n  border-radius: 50%;\n  cursor: pointer;\n  font-size: 1.5rem;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n}\n\n.left-button {\n  right: 50px; /* Adjust position as needed */\n}\n\n.right-button {\n  right: 0;\n}\n\n.nav-button:hover {\n  background-color: rgba(0, 0, 0, 0.7);\n}\n\n/* Responsive Adjustments */\n@media (max-width: 768px) {\n  .nav-button {\n    width: 30px;\n    height: 30px;\n    font-size: 1.2rem;\n  }\n\n  .left-button {\n    right: 40px;\n  }\n\n  .right-button {\n    right: -10px;\n  }\n\n  .card-img-top {\n    margin: 0 30px 10px 30px;\n  }\n}\n</style>\n"],"mappings":"AA2FA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,EAAE;MACVC,WAAW,EAAE,EAAE;MACfC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI